<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.otto.roboapp.ui.activities.PlayerRegistrationActivity"
    android:background="@color/background_material_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_submit_playerName"
            android:layout_alignEnd="@+id/btn_submit_playerName"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_setName"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:id="@+id/label_playerName" />

            <EditText
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/label_playerName"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:id="@+id/playerName"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_submit"
                android:id="@+id/btn_submit_playerName"
                android:layout_below="@+id/playerName"
                android:layout_centerHorizontal="true"
                android:background="#33b5e5" />

        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridView"
            android:layout_gravity="center_horizontal"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp" />
    </LinearLayout>

</RelativeLayout>
