<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="true"
    android:background="@color/background_floating_material_dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ID_Speed"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/ID_Left"
                android:src="@drawable/arrow_left"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:ignore="RtlHardcoded"
                android:layout_alignTop="@+id/ID_Rigth"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/ID_Rigth"
                android:src="@drawable/arrow_right"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:ignore="RtlHardcoded"
                android:layout_toRightOf="@+id/ID_Left"
                android:layout_toEndOf="@+id/ID_Left"
                android:layout_above="@+id/ID_Menu_Gear" />

            <!--ImageView
                android:id="@+id/ID_tachometer"
                android:contentDescription="@string/DSCRP_tachometer"
                android:src="@drawable/tachometer"
                android:layout_width="1100dp"
                android:layout_height="1000dp"
                tools:ignore="RtlHardcoded"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" /-->


            <ImageView
                android:id="@+id/ID_Background_Menu"
                android:contentDescription="@string/DSCRP_Background_Menu"
                android:src="@drawable/background"
                android:layout_width="210dp"
                android:layout_height="210dp"
                tools:ignore="RtlHardcoded"
                android:layout_marginLeft="42dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="132dp"
                android:layout_below="@+id/ID_Speed"
                android:layout_toRightOf="@+id/ID_Rigth"
                android:layout_toEndOf="@+id/ID_Rigth" />

            <ImageView
                android:id="@+id/ID_Menu_Gear"
                android:contentDescription="@string/DSCRP_Menu_Gear"
                android:src="@drawable/menu_gear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:ignore="RtlHardcoded"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <de.otto.roboapp.ui.components.VerticalSeekBar
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:id="@+id/ID_Speed_Slider"
                android:progress="20"
                android:layout_toStartOf="@+id/ID_Menu_Gear"
                android:layout_toLeftOf="@+id/ID_Menu_Gear"
                android:background="@color/background_floating_material_dark"
                android:splitTrack="false"
                android:layout_alignBottom="@+id/ID_Menu_Gear"
                android:layout_below="@+id/ID_Speed" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CountdownTimer"/>
    </FrameLayout>


</RelativeLayout>
